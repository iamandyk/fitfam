{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext"],
    "rootDir": "src",
    "strict": true,
    "outDir": "dist",
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "typeRoots": ["node_modules/@types", "types"],
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": ["src", "types.d.ts"],
  "exclude": ["prisma/**/*"]
}
